<div class="container">
  <h1 class='cocktail-title mt-4'> <%= @cocktail.name.upcase %> </h1>
  <div class="d-flex justify-content-center">
    <div class="card-add show text-center mt-4">
     <p class="mt-3" style='font-size: 24px;'>Recette</p>
    <div class="mt-4">
    <% @cocktail.doses.each do |dose| %>
      <div class="mt-1 recette">
      <%= dose.description + " of " +dose.ingredient.name %>
      <a data-method="delete" class= 'trash' href=<%="#{cocktail_dose_path(@cocktail,dose)}"  %> ><i class="fas fa-trash icon pl-3 black-trash"></i></a>
       </div>
    <% end %>
    </div>
    </div>
  </div>
      <div class= 'mt-4 text-center'>
          <%= link_to 'Back' , cocktails_path, class: 'btn btn-primary px-2 py-1'  %>
          <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary px-2 py-1'  %>
      </div>
</div>
