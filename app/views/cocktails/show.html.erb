<%= render('shared/navbar') %>

<div class="container d-flex justify-content-center">
  <div class='card-show'>
    <div class="image-show">
      <% if @cocktail.photo.attached? %>
        <%= cl_image_tag @cocktail.photo.key, class: 'thumbnail'%>
      <% else %>
        <img class= 'thumbnail' src="https://m.vegaooparty.com/images/blog_idees_fetes/article/584x390/les-meilleurs-cocktails-maison.jpg">
      <% end %>
    </div>
    <div class="content-show">
      <h1 class='cocktail-title'> <%= @cocktail.name.upcase %> </h1>
      <div>
        <% @cocktail.doses.each do |dose| %>
          <div class="recette">
          <a data-method="delete" class= 'trash' href=<%="#{cocktail_dose_path(@cocktail,dose)}"  %> ><i class="fas fa-trash icon black-trash"></i></a>
          <span class='pl-4'><%= dose.description + " of " +dose.ingredient.name %></span>
         </div>
        <% end %>
      </div>
           <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary px-2 py-1 add-btn'  %>
    </div>
  </div>
</div>
<div class="container d-flex justify-content-center mt-4">
  <%= link_to 'Back' , cocktails_path, class: 'btn btn-primary px-2 py-1'  %>
</div>











